public class DigitalCamera
{
	String brand;
	int numMegapix;
	double price;
	
	public DigitalCamera(String brand, int numMegapix)
	{
	
	final double PRICEONE = 99.00;
	final double PRICETWO = 129.00;
	
	if(numMegapix > 10)
	  {
		numMegapix = 10;
	  }
	if(numMegapix <= 6)
	  {
		this.price = PRICEONE;
	  }
	else
	  {
		this.price = PRICETWO;
      }
 	
	}

	public void DigitalCameraDetails 
	{
		System.out.println ( " Camera brand: " + brand ) ;
        System.out.println ( " Resolution: " + numMegapix ) ;
        System.out.println ( " Sale price: $" + price) ;
		
	}
	
			Scanner inputDevice = new Scanner(System.in);
	System.out.print("Enter price>> ");
	price = inputDevice.nextInt();
	System.out.print("Enter quantity>> ");
	quant = inputDevice.nextInt();
	System.out.printf("Price: $" + "%,.2f", + price );
	System.out.printf("\n" + "Quantity: " + quant );
	
	
	
	
	}
}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
